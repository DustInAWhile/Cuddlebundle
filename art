<div class="center">
<button class="button button1" id="yes">Yes</button>
<button class="button button2" id="no" onclick="whyNot()">No</button>
</div>

<script>
function whyNot() {
    var yesButton = document.getElementById("yes");
    var currentFontSize = parseInt(window.getComputedStyle(yesButton).fontSize);
    yesButton.style.fontSize = (currentFontSize + 10) + "px"; // Increase font size by 10 pixels
}

document.getElementById("yes").addEventListener("click", function() {
    console.log("Yes button clicked"); // Log message to console

    // Change the heading paragraph and image
    document.getElementById("title").textContent = "YIPPEEE!!";
    document.getElementById("little").textContent = "Now to choose where to go!";
	document.getElementById("window").src = "https://i.pinimg.com/originals/89/50/96/895096ddcb2d22c300828437894c9480.gif";

    // Remove old buttons
    document.getElementById("yes").remove();
    document.getElementById("no").remove();

    // Add new buttons
var newButton1 = document.createElement("button");
    newButton1.textContent = "Disney";
    newButton1.className = "button button1"; // Add class for styling
    newButton1.style.margin = "4px 2px"; // Apply margin
    newButton1.style.fontSize = "16px"; // Apply font size
    newButton1.style.backgroundColor = "white"; // Apply background color
    newButton1.style.color = "black"; // Apply text color
    newButton1.style.border = "2px solid #04AA6D"; // Apply border
    document.body.appendChild(newButton1);

    var newButton2 = document.createElement("button");
    newButton2.textContent = "Movie with dessert";
    newButton2.className = "button button2"; // Add class for styling
    newButton2.style.margin = "4px 2px"; // Apply margin
    newButton2.style.fontSize = "16px"; // Apply font size
    newButton2.style.backgroundColor = "white"; // Apply background color
    newButton2.style.color = "black"; // Apply text color
    newButton2.style.border = "2px solid #FF0000"; // Apply border
    document.body.appendChild(newButton2);

	var newButton3 = document.createElement("button");
	newButton3.textContent = "Park walk with coffee";
    newButton3.className = "button button2"; // Add class for styling
    newButton3.style.margin = "4px 2px"; // Apply margin
    newButton3.style.fontSize = "16px"; // Apply font size
    newButton3.style.backgroundColor = "white"; // Apply background color
    newButton3.style.color = "black"; // Apply text color
    newButton3.style.border = "2px solid #0000FF"; // Apply border
    document.body.appendChild(newButton3);
});
</script>

